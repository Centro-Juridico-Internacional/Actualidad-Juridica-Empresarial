---
// Capa de Servicios e Integraci칩n con API de Revistas
import { getMagazines } from '@/lib/api/magazines';

// Componentes de Layout y UI
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import PageHero from '@/components/ui/PageHero.astro';

// Componentes de Funcionalidad (Features)
import MagazineCard from '@/components/ui/MagazineCard';

// Obtenci칩n del cat치logo completo de ediciones digitales desde Strapi
const magazines = await getMagazines();
---

<Layout title="Revistas" booleanLayout={true}>
	<div class="min-h-screen to-white">
		<PageHero
			title="Nuestras Revistas"
			subtitle="Explora nuestro cat치logo completo de ediciones digitales"
			className="mb-12"
		/>

		<section class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
			<Breadcrumb title="Todas las Revistas" className="mb-8" />

			{
				magazines.length === 0 ? (
					<div class="py-16 text-center">
						<p class="text-lg text-gray-500">No hay revistas disponibles en este momento.</p>
					</div>
				) : (
					<ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
						{magazines.map((magazine: any) => (
							<li class="group" id={magazine.slug}>
								<MagazineCard
									client:only="react"
									title={magazine.title}
									slug={magazine.slug}
									cover={magazine.cover}
									className="h-full"
								/>
							</li>
						))}
					</ul>
				)
			}
		</section>
	</div>
</Layout>

---
// Internal API imports
import { getMagazines } from '@/lib/api/magazines';

// Astro components (layouts)
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';

// React components (UI)
import MagazineCard from '@/components/ui/MagazineCard';

// Fetch all magazines
const magazines = await getMagazines();
---

<Layout title="Revistas" booleanLayout={true}>
	<div class="min-h-screen to-white">
		<!-- Hero Section -->
		<section
			class="relative mb-12 flex h-[25vh] min-h-[220px] w-full items-center justify-center overflow-hidden bg-green-900"
		>
			<div class="absolute inset-0 opacity-20">
				<!-- Pattern de fondo -->
				<svg
					class="h-full w-full"
					width="100%"
					height="100%"
					viewBox="0 0 800 800"
					xmlns="http://www.w3.org/2000/svg"
				>
					<defs>
						<pattern
							id="dotPattern"
							x="0"
							y="0"
							width="20"
							height="20"
							patternUnits="userSpaceOnUse"
						>
							<circle cx="2" cy="2" r="1" fill="white"></circle>
						</pattern>
					</defs>
					<rect width="800" height="800" fill="url(#dotPattern)"></rect>
				</svg>
			</div>
			<div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
				<h1 class="mb-4 text-4xl font-bold text-white md:text-5xl lg:text-6xl">
					Nuestras Revistas
				</h1>
				<p class="mx-auto max-w-2xl text-lg text-green-100">
					Explora nuestro cat√°logo completo de ediciones digitales
				</p>
			</div>
		</section>

		<section class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
			<Breadcrumb title="Todas las Revistas" className="mb-8" />

			{
				magazines.length === 0 ? (
					<div class="py-16 text-center">
						<p class="text-lg text-gray-500">No hay revistas disponibles en este momento.</p>
					</div>
				) : (
					<ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
						{magazines.map((magazine: any) => (
							<li class="group" id={magazine.slug}>
								<MagazineCard
									client:only="react"
									title={magazine.title}
									slug={magazine.slug}
									cover={magazine.cover}
									className="h-full"
								/>
							</li>
						))}
					</ul>
				)
			}
		</section>
	</div>
</Layout>

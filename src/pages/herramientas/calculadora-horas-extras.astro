---
/**
 * Herramienta: Calculadora de Horas Extras y Recargos
 * ==================================================
 * Determina el valor monetario de horas adicionales (Diurnas, Nocturnas,
 * Dominicales, Festivas) basándose en el salario mensual y base de 240h.
 */
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import HorasExtrasCalculator from '@/components/features/tools/HorasExtrasCalculator.tsx';
import PageHero from '@/components/ui/PageHero.astro';

// Identificación de URL única para la calculadora
const { href } = Astro.url;

/**
 * Metadata Estructurada (JSON-LD)
 * Mejora la visibilidad del componente interactivo en buscadores de finanzas.
 */
const schema = {
	'@context': 'https://schema.org',
	'@type': 'WebApplication',
	name: 'Calculadora de Horas Extras y Recargos',
	applicationCategory: 'FinanceApplication',
	operatingSystem: 'All',
	url: href,
	description:
		'Calculadora oficial colombiana para horas extra, recargos nocturnos, dominicales y festivos.',
	provider: {
		'@type': 'Organization',
		name: 'Centro Jurídico Internacional'
	},
	offers: {
		'@type': 'Offer',
		price: '0',
		priceCurrency: 'COP'
	}
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />

<Layout title="Horas Extras y Recargos" booleanLayout={true} breadcrumbTitle="Herramientas">
	<PageHero
		title="Calculadora de Horas Extras"
		subtitle="Obtén el valor exacto de tus horas extra y recargos según la ley colombiana."
	/>

	<section class="container-main py-12">
		<Breadcrumb title="Herramientas" className="mb-8" />

		<div class="flex flex-col items-center">
			<HorasExtrasCalculator client:load />

			<div class="prose prose-primary mt-12 max-w-3xl rounded-2xl bg-gray-50 p-8 text-gray-600">
				<h3>¿Cómo funciona esta calculadora?</h3>
				<p>Incluye los porcentajes establecidos en la legislación laboral:</p>
				<ul>
					<li>Extra diurna: +25%</li>
					<li>Extra nocturna: +75%</li>
					<li>Nocturno ordinario: +35%</li>
					<li>Dominical o festivo diurno: +75%</li>
					<li>Dominical o festivo nocturno: +110%</li>
				</ul>
				<p>Los cálculos se basan en el salario mensual dividido entre 240 horas legales.</p>
			</div>
		</div>
	</section>
</Layout>

---
// filepath: c:\Users\USUARIO PC\Desktop\ACTUALIDAD\frontend\src\pages\autores\Autores.astro
import Layout from '@/layouts/Layout.astro';
import { getAuthors } from '@/lib/get-authors';

// Recupera todos los autores
const authors = await getAuthors();
---

<Layout title="Autores" booleanLayout={true}>
	<section class="mx-auto max-w-6xl px-4 py-8">
		<h1 class="mb-8 text-center text-4xl font-extrabold text-gray-800">Autores</h1>
		<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
			{
				authors.map((author: any) => (
					<div class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 shadow-md transition hover:shadow-lg">
						<a
							href={`/autores/${author.name.toLowerCase().replace(/\s+/g, '_')}`}
							title={author.name}
						>
							<img
								src={author.avatar}
								alt={author.name}
								class="h-16 w-16 rounded-full object-cover shadow-md"
							/>
						</a>
						<div>
							<h2 class="text-lg font-semibold text-gray-800 hover:text-green-600">
								<a href={`/autores/${author.name.toLowerCase().replace(/\s+/g, '_')}`}>
									{author.name}
								</a>
							</h2>
						</div>
					</div>
				))
			}
		</div>
	</section>
</Layout>

---
// filepath: c:\Users\USUARIO PC\Desktop\ACTUALIDAD\frontend\src\pages\autores\Autores.astro
import Layout from '@/layouts/Layout.astro';
import { getAuthors } from '@/lib/api/authors';

// Recupera todos los autores
const authors = await getAuthors();
---

<Layout title="Autores" booleanLayout={true}>
	<div class="min-h-screen bg-gradient-to-b from-green-50/50 to-white">
		<section class="container-main py-16">
			<div class="relative mb-12 text-center">
				<h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl">
					<span class="relative inline-block">
						Nuestros Autores
						<span
							class="absolute bottom-[-8px] left-0 h-1 w-full transform bg-green-500 transition-transform duration-300 ease-out"
							style="transform-origin: center;"></span>
					</span>
				</h1>
				<p class="mt-4 text-lg text-gray-600">
					Conoce a los expertos que hacen posible nuestro contenido de calidad
				</p>
			</div>

			<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
				{
					authors.map((author: any) => (
						<div class="group relative overflow-hidden rounded-xl bg-white p-6 shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
							<div class="absolute inset-0 bg-gradient-to-b from-green-100/30 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />

							<div class="relative flex flex-col items-center space-y-4">
								<a
									href={`/autores/${author.name.toLowerCase().replace(/\s+/g, '_')}`}
									class="relative inline-block"
									title={`Ver artÃ­culos de ${author.name}`}
								>
									<div class="h-24 w-24 overflow-hidden rounded-full ring-4 ring-green-100 transition-all duration-300 group-hover:ring-green-200">
										<img
											src={author.avatar}
											alt={author.name}
											class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
											loading="lazy"
											decoding="async"
										/>
									</div>
								</a>

								<div class="text-center">
									<h2 class="text-xl font-bold text-gray-900 group-hover:text-green-600">
										<a href={`/autores/${author.name.toLowerCase().replace(/\s+/g, '_')}`}>
											{author.name}
										</a>
									</h2>
									<p class="mt-2 text-sm text-gray-600">{author.role || 'Colaborador'}</p>
								</div>
							</div>
						</div>
					))
				}
			</div>
		</section>
	</div>
</Layout>

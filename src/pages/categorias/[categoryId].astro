---
// Internal API imports
import { getNews } from '@/lib/api/news';
import type { NewsArticle } from '@/lib/api/news';

// Astro components (layouts)
import Layout from '@/layouts/Layout.astro';

// Astro components (UI)
import NewsCard from '@/components/ui/NewsCard.astro';

// Get category ID from route params and normalize to lowercase
const { categoryId } = Astro.params as { categoryId: string };
if (!categoryId) throw Astro.redirect('/404');

// Normalize to lowercase for case-insensitive matching
const normalizedCategoryId = categoryId.toLowerCase().trim();

// Fetch news articles for this category
const { products }: { products: NewsArticle[] } = await getNews({ categoryId: normalizedCategoryId });

// ISR maneja el cache automáticamente en modo hybrid
---

<Layout title={categoryId} booleanLayout={true}>
	<div class="animate-fadeIn">
		<!-- Header de categoría con animación -->
		<!-- Header de categoría con animación -->
		<section class="relative flex h-[25vh] min-h-[220px] w-full items-center justify-center overflow-hidden bg-green-900">
			<div class="absolute inset-0 opacity-20">
				<!-- Pattern de fondo -->
				<svg class="h-full w-full" width="100%" height="100%" viewBox="0 0 800 800" xmlns="http://www.w3.org/2000/svg">
					<defs>
						<pattern id="dotPattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
							<circle cx="2" cy="2" r="1" fill="white" />
						</pattern>
					</defs>
					<rect width="800" height="800" fill="url(#dotPattern)" />
				</svg>
			</div>
			<div class="container-main relative z-10 text-center">
				<h2 class="mb-4 text-4xl font-bold text-white md:text-5xl lg:text-6xl capitalize">
					{categoryId.replace(/_/g, ' ')}
				</h2>
				<p class="mx-auto max-w-2xl text-lg text-green-100">
					Explora las últimas noticias y actualizaciones
				</p>
			</div>
		</section>

		<!-- Grid de noticias con animación -->
		<section class="container-main py-12">
			<div class="grid items-stretch gap-8 sm:grid-cols-2 lg:grid-cols-3">
				{
					products.map((product: any, index: number) => (
						<div class="group h-full transform transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl">
							<NewsCard product={product} truncateWords={30} className="h-full" />
						</div>
					))
				}
			</div>
		</section>
	</div>
</Layout>

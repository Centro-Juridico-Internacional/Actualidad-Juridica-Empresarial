---
// Capa de Servicios e Integración con API de Categorías
import { getCategories } from '@/lib/api/categories';

// Componentes de Layout y UI
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import PageHero from '@/components/ui/PageHero.astro';

// Obtención del listado completo de categorías desde Strapi
const categories = await getCategories();
---

<Layout title="Categorías" booleanLayout={true}>
	<div class="min-h-screen to-white">
		<PageHero
			title="Explora por Categorías"
			subtitle="Descubre contenido especializado en diferentes áreas del derecho"
			className="mb-12"
		/>

		<section class="container-main py-16">
			<Breadcrumb title="Todas las Categorías" className="mb-8" />
			<ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
				{
					categories.map((category: any) => (
						<li class="group" id={category.slug}>
							<a
								href={`/categorias/${category.slug}`}
								class="relative block overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl"
							>
								<div class="aspect-w-16 aspect-h-9 relative overflow-hidden">
									<img
										src={category.image}
										alt={category.name}
										class="h-48 w-full object-cover transition-transform duration-500"
										loading="lazy"
										decoding="async"
									/>
									<div class="absolute inset-0 bg-linear-to-t from-black/60 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
								</div>

								<div class="relative flex h-full flex-col p-6">
									<h2 class="group-hover:text-secondary-600 mb-3 inline-block text-xl font-bold text-gray-900 first-letter:uppercase">
										{category.name}
									</h2>
									<p class="mb-4 line-clamp-3 text-sm text-gray-600">{category.description}</p>
									<div class="mt-auto flex items-center justify-between">
										<span class="bg-secondary-100 text-secondary-800 group-hover:bg-secondary-200 inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium transition-colors">
											Ver artículos
											<svg
												class="ml-2 h-4 w-4 transition-transform duration-300 group-hover:translate-x-0.5"
												fill="none"
												viewBox="0 0 24 24"
												stroke="currentColor"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M13 7l5 5m0 0l-5 5m5-5H6"
												/>
											</svg>
										</span>
									</div>
								</div>
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</div>
</Layout>

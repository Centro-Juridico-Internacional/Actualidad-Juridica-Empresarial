---
// Internal API imports
import { getCategories } from '@/lib/api/categories';

// Astro components (layouts)
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';

// Fetch all categories
const categories = await getCategories();
---

<Layout title="Categorías" booleanLayout={true}>
	<div class="min-h-screen to-white">
		<!-- Hero Section -->
		<section class="relative flex h-[25vh] min-h-[220px] w-full items-center justify-center overflow-hidden bg-green-900 mb-12">
			<div class="absolute inset-0 opacity-20">
				<!-- Pattern de fondo -->
				<svg class="h-full w-full" width="100%" height="100%" viewBox="0 0 800 800" xmlns="http://www.w3.org/2000/svg">
					<defs>
						<pattern id="dotPattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
							<circle cx="2" cy="2" r="1" fill="white" />
						</pattern>
					</defs>
					<rect width="800" height="800" fill="url(#dotPattern)" />
				</svg>
			</div>
			<div class="container-main relative z-10 text-center">
				<h1 class="mb-4 text-4xl font-bold text-white md:text-5xl lg:text-6xl">
					Explora por Categorías
				</h1>
				<p class="mx-auto max-w-2xl text-lg text-green-100">
					Descubre contenido especializado en diferentes áreas del derecho
				</p>
			</div>
		</section>

		<section class="container-main py-16">
			<Breadcrumb title="Todas las Categorías" className="mb-8" />
			<ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
				{
					categories.map((category: any) => (
						<li class="group" id={category.slug}>
							<a
								href={`/categorias/${category.slug}`}
								class="relative block overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl"
							>
								<div class="aspect-w-16 aspect-h-9 relative overflow-hidden">
									<img
										src={category.image}
										alt={category.name}
										class="h-48 w-full object-cover transition-transform duration-500"
										loading="lazy"
										decoding="async"
									/>
									<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
								</div>

								<div class="relative flex h-full flex-col p-6">
									<h2 class="mb-3 inline-block text-xl font-bold text-gray-900 group-hover:text-green-600 first-letter:uppercase">
										{category.name}
									</h2>
									<p class="mb-4 line-clamp-3 text-sm text-gray-600">{category.description}</p>
									<div class="mt-auto flex items-center justify-between">
										<span class="inline-flex items-center rounded-full bg-green-100 px-4 py-1.5 text-sm font-medium text-green-800 transition-colors group-hover:bg-green-200">
											Ver artículos
											<svg
												class="ml-2 h-4 w-4 transition-transform duration-300 group-hover:translate-x-0.5"
												fill="none"
												viewBox="0 0 24 24"
												stroke="currentColor"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M13 7l5 5m0 0l-5 5m5-5H6"
												/>
											</svg>
										</span>
									</div>
								</div>
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</div>
</Layout>

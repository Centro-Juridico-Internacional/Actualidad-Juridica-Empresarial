---
// Capa de Servicios e Integración con API de Categorías
import { getCategories } from '@/lib/api/categories';
import { getPautas } from '@/lib/api/pautas';
import { getMagazines } from '@/lib/api/magazines';
import { getInterviewsUrl } from '@/lib/api/interviews';

// Componentes de Layout y UI
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import PautaContactForm from '@/components/features/form/PautaContactForm.tsx';
import Magazine from '@/components/features/magazines/Magazine.tsx';
import CarouselInterview from '@/components/features/carousel/InterviewCarousel';
import Carousel from '@/components/features/carousel/Carousel';

// Obtención del listado completo de categorías desde Strapi
const categories = await getCategories();
const pautas = await getPautas();
const magazines = await getMagazines();
const interviews = await getInterviewsUrl();

// Filtrar revista de enero (asumiendo que el título contiene "enero" o similar)
const revistaEnero =
	magazines.find((mag) => mag.title.toLowerCase().includes('enero')) || magazines[0];

// Dividir pautas en dos mitades para los carruseles
const midPoint = Math.ceil(pautas.length / 2);
const pautasFirstHalf = pautas.slice(0, midPoint);
const pautasSecondHalf = pautas.slice(midPoint);

// Transformar pautas para los carruseles
const pautasForCarousel1 = pautasFirstHalf
	.filter((pauta) => pauta.image !== null)
	.map((pauta, index) => ({
		id: `pauta-1-${index}`,
		title: pauta.title,
		image: pauta.image!
	}));

const pautasForCarousel2 = pautasSecondHalf
	.filter((pauta) => pauta.image !== null)
	.map((pauta, index) => ({
		id: `pauta-2-${index}`,
		title: pauta.title,
		image: pauta.image!
	}));
---

<Layout title="Categorías" booleanLayout={true}>
	<div class="min-h-screen to-white">
		<!-- Sección Hero de Categorías -->
		<section
			class="relative mb-12 flex h-[25vh] min-h-[220px] w-full items-center justify-center overflow-hidden bg-green-900"
		>
			<div class="absolute inset-0 opacity-20">
				<!-- Pattern de fondo -->
				<svg
					class="h-full w-full"
					width="100%"
					height="100%"
					viewBox="0 0 800 800"
					xmlns="http://www.w3.org/2000/svg"
				>
					<defs>
						<pattern
							id="dotPattern"
							x="0"
							y="0"
							width="20"
							height="20"
							patternUnits="userSpaceOnUse"
						>
							<circle cx="2" cy="2" r="1" fill="white"></circle>
						</pattern>
					</defs>
					<rect width="800" height="800" fill="url(#dotPattern)"></rect>
				</svg>
			</div>
			<div class="container-main relative z-10 text-center">
				<h1 class="mb-4 text-4xl font-bold text-white md:text-5xl lg:text-6xl">CJI Medios</h1>
				<p class="mx-auto max-w-2xl text-lg text-green-100">
					Contacto para pautas y colaboraciones.
				</p>
			</div>
		</section>

		<section class="container-main py-16">
			<Breadcrumb title="CJI - Medios" className="mb-8" />
			<div class="space-y-12">
				<!-- Sección de Pautas Publicitarias -->
				<section>
					<h2 class="mb-6 text-3xl font-bold text-gray-900">Pautas Publicitarias</h2>
					<div class="grid gap-8 md:grid-cols-2">
						<!-- Carrusel 1: Primera mitad de pautas -->
						<div
							class="group relative aspect-video overflow-hidden rounded-3xl bg-gradient-to-br from-green-600 via-green-700 to-emerald-900 shadow-2xl transition-all duration-300"
						>
							<Carousel
								width="w-full"
								autoplaySpeed={5000}
								dotDuration={true}
								data={pautasForCarousel1}
								client:visible
							/>

							<div
								class="pointer-events-none absolute inset-x-0 top-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent p-6 pb-12"
							>
								<div class="space-y-0.5">
									<h3 class="line-clamp-1 text-base font-bold text-white md:text-lg">
										Pautas Destacadas - Parte 1
									</h3>
									<p class="line-clamp-1 text-[10px] text-gray-100/90 md:text-xs">
										Mensajes de nuestros aliados y patrocinadores
									</p>
								</div>
							</div>
						</div>

						<!-- Carrusel 2: Segunda mitad de pautas -->
						<div
							class="group relative aspect-video overflow-hidden rounded-3xl bg-gradient-to-br from-emerald-600 via-green-700 to-green-800 shadow-2xl transition-all duration-300"
						>
							<Carousel
								width="w-full"
								autoplaySpeed={5000}
								dotDuration={true}
								data={pautasForCarousel2}
								client:visible
							/>

							<div
								class="pointer-events-none absolute inset-x-0 top-0 bg-gradient-to-b from-black/60 via-black/20 to-transparent p-6 pb-12"
							>
								<div class="space-y-0.5">
									<h3 class="line-clamp-1 text-base font-bold text-white md:text-lg">
										Pautas Destacadas - Parte 2
									</h3>
									<p class="line-clamp-1 text-[10px] text-gray-100/90 md:text-xs">
										Más mensajes de nuestros aliados y patrocinadores
									</p>
								</div>
							</div>
						</div>
					</div>
				</section>
				<!-- Sección Call to Action -->
				<section
					class="rounded-2xl bg-gradient-to-r from-green-900 to-green-800 p-8 text-center text-white shadow-xl"
				>
					<h2 class="mb-4 text-3xl font-bold">¿Listo para aumentar tu visibilidad?</h2>
					<p class="mb-6 text-lg text-green-100">
						Únete a las empresas que confían en CJI para su publicidad y marketing digital.
					</p>
					<div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
						<a
							href="#contacto"
							class="inline-flex items-center justify-center rounded-lg bg-[#c5a03f] px-8 py-4 font-bold text-white transition-all duration-300 hover:-translate-y-1 hover:bg-[#b8943a] hover:shadow-xl"
						>
							Contactar Ahora
							<svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
								></path>
							</svg>
						</a>
						<a
							href="tel:+573001234567"
							class="inline-flex items-center justify-center rounded-lg border-2 border-white px-8 py-4 font-bold text-white transition-all duration-300 hover:bg-white hover:text-green-900"
						>
							Llamar Ahora
							<svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
								></path>
							</svg>
						</a>
					</div>
				</section>

				<!-- Sección de Revista de Enero -->
				<section>
					<h2 class="mb-6 text-3xl font-bold text-gray-900">Última Revista</h2>
					{
						magazines[0]?.pdf && (
							<Magazine
								client:only="react"
								pdfUrl={`/api/pdf?url=${encodeURIComponent(magazines[0].pdf)}`}
							/>
						)
					}
					<div class="mt-6 text-center">
						<a
							href="/revistas"
							class="inline-flex items-center rounded-lg bg-green-700 px-6 py-3 font-semibold text-white shadow-md transition-colors duration-300 hover:bg-green-800 hover:shadow-lg"
						>
							Ver Todas las Revistas
							<svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>
				</section>

				<!-- Sección de Estadísticas -->
				<section>
					<h2 class="mb-6 text-center text-3xl font-bold text-gray-900">Nuestro Alcance</h2>
					<div class="grid grid-cols-2 gap-6 md:grid-cols-4">
						<div class="text-center">
							<div class="mb-2 text-4xl font-bold text-green-900">50K+</div>
							<div class="text-gray-600">Lectores Mensuales</div>
						</div>
						<div class="text-center">
							<div class="mb-2 text-4xl font-bold text-green-900">25K+</div>
							<div class="text-gray-600">Seguidores en Redes</div>
						</div>
						<div class="text-center">
							<div class="mb-2 text-4xl font-bold text-green-900">100+</div>
							<div class="text-gray-600">Empresas Anunciantes</div>
						</div>
						<div class="text-center">
							<div class="mb-2 text-4xl font-bold text-green-900">95%</div>
							<div class="text-gray-600">Satisfacción Cliente</div>
						</div>
					</div>
				</section>

				<!-- Sección de Todas las Entrevistas -->
				<section>
					<h2 class="mb-6 text-3xl font-bold text-gray-900">Todas las Entrevistas</h2>
					<div
						class="rounded-3xl bg-gradient-to-br from-green-600 via-green-700 to-emerald-900 p-8 shadow-2xl"
					>
						<CarouselInterview interviews={interviews} client:load />
					</div>
				</section>

				<!-- Sección de Casos de Éxito -->
				<section>
					<h2 class="mb-6 text-3xl font-bold text-gray-900">Casos de Éxito</h2>
					<div class="grid grid-cols-1 gap-6 md:grid-cols-2">
						<div class="rounded-lg border-l-4 border-green-500 bg-white p-6 shadow-md">
							<h3 class="mb-3 text-xl font-bold text-green-900">Empresa Legal ABC</h3>
							<p class="mb-4 text-gray-600">
								"Después de 3 meses de publicidad con CJI, aumentamos nuestros clientes potenciales
								en un 150%."
							</p>
							<div class="flex items-center justify-between">
								<div class="text-sm text-gray-500">Campaña: 3 meses</div>
								<div class="text-sm font-semibold text-green-600">+150% leads</div>
							</div>
						</div>
						<div class="rounded-lg border-l-4 border-green-500 bg-white p-6 shadow-md">
							<h3 class="mb-3 text-xl font-bold text-green-900">Consultoría XYZ</h3>
							<p class="mb-4 text-gray-600">
								"La visibilidad en redes sociales se incrementó exponencialmente, generando más
								consultas diarias."
							</p>
							<div class="flex items-center justify-between">
								<div class="text-sm text-gray-500">Campaña: 6 meses</div>
								<div class="text-sm font-semibold text-green-600">+300% engagement</div>
							</div>
						</div>
					</div>
				</section>

				<!-- Sección de Por Qué Elegirnos -->
				<section class="rounded-lg bg-white p-8 shadow-md">
					<h2 class="mb-6 text-center text-3xl font-bold text-gray-900">
						¿Por Qué Elegir CJI Medios?
					</h2>
					<div class="grid grid-cols-1 gap-6 md:grid-cols-3">
						<div class="text-center">
							<div
								class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-green-100"
							>
								<svg
									class="h-8 w-8 text-green-600"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M13 10V3L4 14h7v7l9-11h-7z"></path>
								</svg>
							</div>
							<h3 class="mb-2 text-lg font-semibold text-gray-900">Resultados Rápidos</h3>
							<p class="text-gray-600">
								Campañas optimizadas para generar leads cualificados en tiempo récord.
							</p>
						</div>
						<div class="text-center">
							<div
								class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-green-100"
							>
								<svg
									class="h-8 w-8 text-green-600"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
									></path>
								</svg>
							</div>
							<h3 class="mb-2 text-lg font-semibold text-gray-900">Audiencia Calificada</h3>
							<p class="text-gray-600">
								Accede a profesionales del derecho y empresas del sector jurídico.
							</p>
						</div>
						<div class="text-center">
							<div
								class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-green-100"
							>
								<svg
									class="h-8 w-8 text-green-600"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<h3 class="mb-2 text-lg font-semibold text-gray-900">Transparencia Total</h3>
							<p class="text-gray-600">
								Reportes detallados y seguimiento constante de tus campañas publicitarias.
							</p>
						</div>
					</div>
				</section>

				<!-- Sección de Contacto para Pautar -->
				<section class="rounded-lg bg-white p-8 shadow-md" id="contacto">
					<h2 class="mb-6 text-3xl font-bold text-gray-900">Contacto para Pautar</h2>
					<p class="mb-6 text-lg text-gray-700">
						¿Interesado en publicitar con nosotros? Contáctanos y obtén información sobre nuestras
						tarifas y opciones disponibles. Tenemos diferentes planes para afiliados a CJI y para
						empresas no afiliadas.
					</p>
					<PautaContactForm client:load />
				</section>
			</div>
		</section>
	</div>
</Layout>

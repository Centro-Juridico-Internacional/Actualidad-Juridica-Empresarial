import Layout from '@/layouts/Layout.astro';
import Revista from '@/components/home/Revista';
---

<Layout title="Test Flipbook - Revista" booleanLayout={false}>
	<section class="mx-auto max-w-7xl px-4 py-12">
		<!-- Título de la página -->
		<div class="mb-8 text-center">
			<h1 class="mb-2 text-4xl font-bold text-gray-900">Flipbook de Revista</h1>
			<p class="text-lg text-gray-600">
				Visualiza nuestras revistas en formato digital con efecto de volteo de páginas
			</p>
		</div>

		<!-- Componente Flipbook -->
		<div class="flex min-h-screen items-center justify-center">
			<Revista
				client:only="react"
				pdfUrl="/revistas/revista.pdf"
				width={700}
				height={900}
				className="revista-flipbook"
			/>
		</div>
	</section>
</Layout>

<style>
	.revista-flipbook {
		max-width: 100%;
	}
</style>

import Layout from '@/layouts/Layout.astro';
import { getBanner } from '@/lib/get-banner';

const banner = await getBanner();
---

<Layout title="Pautas y Entrevistas" booleanLayout={false}>
	<section class="mx-auto max-w-6xl px-4 py-8">
		<div
			class="flex flex-col items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 shadow-md"
			id={banner.slug}
		>
			<img
				src={banner.banner}
				alt={banner.nombre}
				class="h-32 w-32 rounded-lg object-cover shadow-md"
				loading="lazy"
				decoding="async"
			/>
			<h2 class="text-lg font-semibold text-gray-800">{banner.nombre}</h2>
		</div>
	</section>
</Layout>

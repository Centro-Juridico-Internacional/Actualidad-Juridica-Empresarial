import Layout from '@/layouts/Layout.astro';
import { getPautas } from '@/lib/get-pautas';
import { getInterviewsUrl } from '@/lib/get-interviewsUrl';

// Recupera las pautas e entrevistas
const pautas = await getPautas();
const interviews = await getInterviewsUrl();
---

<Layout title="Pautas y Entrevistas" booleanLayout={true}>
	<section class="mx-auto max-w-6xl px-4 py-8">
		<h1 class="mb-8 text-center text-4xl font-extrabold text-gray-800">Pautas</h1>
		<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
			{
				pautas.map((pauta: any) => (
					<div class="flex flex-col items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 shadow-md">
						<img
							src={pauta.image}
							alt={pauta.title}
							class="h-32 w-32 rounded-lg object-cover shadow-md"
						/>
						<h2 class="text-lg font-semibold text-gray-800">{pauta.title}</h2>
					</div>
				))
			}
		</div>

		<h1 class="mt-12 mb-8 text-center text-4xl font-extrabold text-gray-800">Entrevistas</h1>
		<div class="grid gap-4">
			{
				interviews.map((interview: any) => (
					<div class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 shadow-md">
						<a
							href={interview.url}
							class="text-lg font-semibold text-blue-600 hover:underline"
							target="_blank"
							rel="noopener noreferrer"
						>
							{interview.url}
							{interview.title && (
								<span class="ml-2 text-sm text-gray-500">({interview.title})</span>
							)}
						</a>
					</div>
				))
			}
		</div>
	</section>
</Layout>

---
// Interfaz de Propiedades
// Define el contrato de entrada para los encabezados de sección.
interface Props {
	text: string;
	white?: boolean;
}

// Desestructuración de propiedades con tipado explícito
// Se extrae 'text' para el contenido y 'white' para el esquema de color.
const { text, white = false }: Props = Astro.props;
---

<div class="relative my-12 text-center">
	<h2
		class:list={[
			'animate-title inline-block text-4xl font-bold tracking-tight',
			white ? 'text-gray-50' : 'text-gray-900'
		]}
	>
		{text}
		<span
			class:list={[
				'absolute -bottom-2 left-0 h-1 w-full transform transition-all duration-300',
				white ? 'bg-transparent' : 'bg-primary-600'
			]}
			style="transform-origin: center;"></span>
	</h2>
</div>

<style>
	@keyframes titleAppear {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-title {
		animation: titleAppear 0.6s ease-out forwards;
	}

	h1 {
		position: relative;
		display: inline-flex;
		flex-direction: column;
	}

	h1::after {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 50%;
		height: 4px;
		width: 0;
		background-color: var(--color-primary-600);
		transition: all 0.5s;
		transform: translateX(-50%);
	}

	h1:hover::after {
		width: 100%;
	}
</style>

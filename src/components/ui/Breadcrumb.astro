---
// Props
interface Props {
  title?: string;
  className?: string;
}

const { title, className = '' } = Astro.props;
const { pathname } = Astro.url;

// Split logic
// Filter empty strings from split
const pathSegments = pathname.split('/').filter(segment => segment);

// Route name mapping
const routeNames: Record<string, string> = {
  'noticia': 'Noticias',
  'categorias': 'Categorías',
  'autores': 'Autores',
  'contacto': 'Contacto',
  'buscar': 'Búsqueda',
  // Add other static routes as needed
};

// Breadcrumb items generator
const breadcrumbItems = pathSegments.map((segment, index) => {
  const isLast = index === pathSegments.length - 1;
  
  // URL construction: / + previous + current
  const href = `/${pathSegments.slice(0, index + 1).join('/')}`;
  
  // Name determination
  // 1. If it's the last item and we have a specific 'title' prop, use it.
  // 2. Map from routeNames.
  // 3. Fallback to capitalized segment.
  let name = routeNames[segment.toLowerCase()] || 
             segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' ');

  if (isLast && title) {
    name = title;
  }

  // Handle redundant route logic (e.g. if we are at /noticia/[id], the first segment 'noticia' might not need a link or needs to perform differently if that index page doesn't exist)
  // Assuming /noticia redirect or page exists, or using a span if no link desired.
  // For now, standard linking.
  
  return {
    name,
    href,
    isLast
  };
});
---

{
    // Solo mostrar si no es el home
    pathname !== '/' && (
        <nav aria-label="Breadcrumb" class={`flex text-xs md:text-sm text-gray-500 mb-4 bg-transparent ${className}`}>
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
            <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center font-medium hover:text-[#084A00] transition-colors">
                <svg class="w-3 h-3 me-1 md:me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                </svg>
                Inicio
            </a>
            </li>
            
            {breadcrumbItems.map((item) => (
            <li>
                <div class="flex items-center">
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                
                {item.isLast ? (
                     <span class="ms-1 font-semibold text-gray-700 md:ms-2 dark:text-gray-400 max-w-[150px] truncate sm:max-w-none">{item.name}</span>
                ) : (
                    <a href={item.href} class="ms-1 font-medium hover:text-[#084A00] md:ms-2 dark:text-gray-400 dark:hover:text-white transition-colors">
                        {item.name}
                    </a>
                )}
                </div>
            </li>
            ))}
        </ol>
        </nav>
    )
}

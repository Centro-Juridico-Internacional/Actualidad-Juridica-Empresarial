---
// React components (features)
import NewsComponent from '@/components/features/news/NewsComponent';

// Types
import type { NewsArticle } from '@/lib/api/news';

// Astro components (UI)
import Titles from '@/components/ui/Titles.astro';

// Interfaz de Propiedades
interface Props {
	/** Array de artículos de noticias para el listado secundario */
	products: NewsArticle[];
}

// Desestructuración de propiedades
const { products }: Props = Astro.props;

// Slice noticias de la 7 a la 13 (índices 6-12, total de 7 noticias) solo laboral
const moreNews = products.filter((product) => product.categories.includes('Laboral')).slice(0, 6);
---

<section class="container-main my-24">
	<!-- Título de la Sección -->
	<Titles text="Más noticias que te podrían interesar" />

	<!-- Cuadrícula (Grid) de Noticias Secundarias -->
	{
		moreNews.length > 0 && (
			<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3" id="MoreNewsSection">
				{moreNews.map((newsItem) => (
					<div class="group relative h-80 overflow-hidden rounded-2xl shadow-xl transition-all duration-300 hover:rounded-2xl hover:shadow-2xl">
						<NewsComponent
							product={newsItem}
							bgOverlay={true}
							showContent={false}
							titleSize="small"
							className="h-full w-full transform transition-transform duration-500"
						/>
						<div class="absolute inset-0 bg-linear-to-t from-black/60 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
					</div>
				))}
			</div>
		)
	}
</section>

---
// React components (features)
import NewsComponent from '@/components/features/news/NewsComponent';

// Types
import type { NewsArticle } from '@/lib/api/news';

// Astro components (UI)
import Titles from '@/components/ui/Titles.astro';

// Props interface
interface Props {
	/** Array of news articles to display */
	products: NewsArticle[];
}

// Destructure props
const { products }: Props = Astro.props;

// Slice noticias de la 7 a la 13 (índices 6-12, total de 7 noticias)
const moreNews = products.slice(7, 13);
---

<section class="container-main py-16">
	<!-- Section title -->
	<Titles text="Más noticias que te podrían interesar" />

	<!-- News grid -->
	{
		moreNews.length > 0 && (
			<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
				{moreNews.map((newsItem) => (
					<div
						class="group relative h-80 overflow-hidden rounded-2xl shadow-xl transition-all duration-300 hover:rounded-2xl hover:shadow-2xl"
						id="MoreNewsSection"
					>
						<NewsComponent
							product={newsItem}
							bgOverlay={true}
							showContent={false}
							titleSize="small"
							className="h-full w-full transform transition-transform duration-500"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
					</div>
				))}
			</div>
		)
	}
</section>

<style>
	.container-main {
		margin-left: auto;
		margin-right: auto;
		max-width: 80rem;
		padding-left: 1rem;
		padding-right: 1rem;
	}

	@media (min-width: 640px) {
		.container-main {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}

	@media (min-width: 1024px) {
		.container-main {
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}
</style>

---
// React components (features)
import CarouselInterview from '@/components/features/carousel/InterviewCarousel';

// Types
import type { Capsula } from '@/lib/api/capsulas';

// Astro components (UI)
import Titles from '@/components/ui/Titles.astro';

// Props interface
interface Props {
	/** Array of capsulas to display */
	capsulas: Capsula[];
}

// Destructure props
const { capsulas }: Props = Astro.props;
---

<Titles text="Capsulas Legales & Podcast" />

<section id="ContainerInterview-Magazine" class="container-main my-16">
	<div class="grid gap-8 md:grid-cols-2">
		<!-- Capsulas Legales -->
		<div
			class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-green-600 via-green-700 to-green-800 shadow-xl transition-transform duration-300 ease-out hover:shadow-2xl"
		>
			<div class="relative min-h-[260px] w-full">
				<div class="absolute inset-0 bg-black/25"></div>
				<CarouselInterview interviews={capsulas} client:visible />
			</div>

			<div
				class="pointer-events-none absolute inset-x-0 top-0 bg-gradient-to-b from-black/80 via-black/40 to-transparent px-6 py-2"
			>
				<div class="relative top-0.5">
					<h3 class="text-xl font-semibold text-white md:text-2xl">Capsulas Legales Destacadas</h3>
					<p class="text-sm text-gray-200/90">Expertos del derecho</p>
				</div>
			</div>
		</div>

		<!-- Podcast -->
		<div
			class="group relative h-fit overflow-hidden rounded-2xl transition-transform duration-300 ease-out"
		>
			<div class="relative min-h-[260px] w-full shadow-xl hover:shadow-2xl">
				<iframe
					data-testid="embed-iframe"
					style="border-radius:12px"
					src="https://open.spotify.com/embed/show/5NoxoUHzsDWTVEL359ABkq?utm_source=generator"
					width="100%"
					height="352"
					allowfullscreen=""
					allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
					loading="lazy"></iframe>
			</div>
		</div>
	</div>
</section>

<style>
	.container-main {
		margin-left: auto;
		margin-right: auto;
		max-width: 80rem;
		padding-left: 1rem;
		padding-right: 1rem;
	}

	@media (min-width: 640px) {
		.container-main {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}

	@media (min-width: 1024px) {
		.container-main {
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}
</style>

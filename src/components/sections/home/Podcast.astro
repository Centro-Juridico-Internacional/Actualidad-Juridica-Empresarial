---
// React components (features)
import CarouselInterview from '@/components/features/carousel/InterviewCarousel';

// Types
import type { Capsula } from '@/lib/api/capsulas';

// Astro components (UI)
import Titles from '@/components/ui/Titles.astro';

// Interfaz de Propiedades
interface Props {
	/** Colección de capsulas legales para el carrusel de video */
	capsulas: Capsula[];
}

// Desestructuración de propiedades
const { capsulas }: Props = Astro.props;
---

<section class="containerPodcast h-fit w-full py-1">
	<section id="ContainerInterview-Magazine" class="container-main my-20">
		<Titles text="Capsulas Legales & Podcast" white={true} />

		<div class="grid gap-8 md:grid-cols-2">
			<!-- Capsulas Legales -->
			<div
				class="group from-primary-600 via-primary-700 to-primary-800 relative isolate h-88 overflow-hidden rounded-3xl bg-linear-to-br shadow-xl transition-all duration-300 ease-out hover:shadow-2xl"
			>
				<div class="absolute inset-0 z-0">
					<div class="absolute inset-0 bg-black/25"></div>
					<CarouselInterview interviews={capsulas} client:visible />
				</div>

				<div
					class="pointer-events-none absolute inset-x-0 top-0 z-10 bg-linear-to-b from-black/80 via-black/40 to-transparent p-6 pb-12"
				>
					<div class="space-y-0.5">
						<h3 class="line-clamp-1 text-base font-bold text-white md:text-lg">
							Capsulas Legales Destacadas
						</h3>
						<p class="line-clamp-1 text-[10px] text-gray-100/90 md:text-xs">Expertos del derecho</p>
					</div>
				</div>
			</div>

			<!-- Podcast -->
			<div
				class="group from-primary-600 via-primary-700 to-primary-800 relative isolate h-88 overflow-hidden rounded-3xl bg-linear-to-br shadow-xl transition-all duration-300 ease-out hover:shadow-2xl"
			>
				<iframe
					data-testid="embed-iframe"
					class="h-full w-full"
					src="https://open.spotify.com/embed/show/5NoxoUHzsDWTVEL359ABkq?utm_source=generator"
					width="100%"
					height="100%"
					allowfullscreen=""
					allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
					loading="lazy"></iframe>
			</div>
		</div>
	</section>
</section>

<style>
	.containerPodcast {
		width: 100%;
		height: 100%;
		background-color: var(--color-primary-900);
		background-image: radial-gradient(rgba(255, 255, 255, 0.918) 1px, transparent 0);
		background-size: 30px 30px;
		background-position: -3px -3px;
	}
</style>

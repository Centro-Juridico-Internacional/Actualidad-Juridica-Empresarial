---
// React components (features)
import CarouselInterview from '@/components/features/carousel/InterviewCarousel';

// Types
import type { Capsula } from '@/lib/api/capsulas';

// Astro components (UI)
import Titles from '@/components/ui/Titles.astro';

// Props interface
interface Props {
	/** Array of capsulas to display */
	capsulas: Capsula[];
}

// Destructure props
const { capsulas }: Props = Astro.props;
---

<section class="w-full h-fit py-1 containerPodcast">	
	<section id="ContainerInterview-Magazine" class="container-main my-20">
		<Titles text="Capsulas Legales & Podcast" white={true}/>
	
		<div class="grid gap-8 md:grid-cols-2">
			<!-- Capsulas Legales -->
			<div
				class="group relative isolate h-[352px] overflow-hidden rounded-3xl bg-gradient-to-br from-green-600 via-green-700 to-green-800 shadow-xl transition-all duration-300 ease-out hover:shadow-2xl"
			>
				<div class="absolute inset-0 z-0">
					<div class="absolute inset-0 bg-black/25"></div>
					<CarouselInterview interviews={capsulas} client:visible />
				</div>
	
				<div
					class="pointer-events-none absolute inset-x-0 top-0 z-10 bg-gradient-to-b from-black/80 via-black/40 to-transparent p-6 pb-12"
				>
					<div class="space-y-0.5">
						<h3 class="line-clamp-1 text-base font-bold text-white md:text-lg">
							Capsulas Legales Destacadas
						</h3>
						<p class="line-clamp-1 text-[10px] text-gray-100/90 md:text-xs">Expertos del derecho</p>
					</div>
				</div>
			</div>
	
			<!-- Podcast -->
			<div
				class="group relative isolate h-[352px] overflow-hidden rounded-3xl bg-gradient-to-br from-green-600 via-green-700 to-green-800 shadow-xl transition-all duration-300 ease-out hover:shadow-2xl"
			>
				<iframe
					data-testid="embed-iframe"
					class="h-full w-full"
					src="https://open.spotify.com/embed/show/5NoxoUHzsDWTVEL359ABkq?utm_source=generator"
					width="100%"
					height="100%"
					allowfullscreen=""
					allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
					loading="lazy"></iframe>
			</div>
		</div>
	</section>
</section>

<style>
	.container-main {
		margin-left: auto;
		margin-right: auto;
		max-width: 80rem;
		padding-left: 1rem;
		padding-right: 1rem;
	}

	@media (min-width: 640px) {
		.container-main {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}

	@media (min-width: 1024px) {
		.container-main {
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}

	.containerPodcast {
	width: 100%;
	height: 100%;
	background-color: #026d29e1;
	background-image: radial-gradient(rgba(255, 255, 255, 0.918) 1px, transparent 0);
	background-size: 30px 30px;
	background-position: -3px -3px;
}
</style>

---
// React components (features)
import NewsComponent from '@/components/features/news/NewsComponent';

// Types
import type { NewsArticle } from '@/lib/api/news';

// Astro components (UI)
import Titles from '@/components/ui/Titles.astro';

// Props interface
interface Props {
	/** Array of news articles to display */
	products: NewsArticle[];
}

// Destructure props
const { products }: Props = Astro.props;
---

<section id="InformationOfInterestSection" class="container-main py-16">
	<!-- Section title -->
	<Titles text="Información de interés" />

	<!-- Featured news grid -->
	<div class="grid grid-cols-1 gap-6 md:grid-cols-2">
		<div
			class="group relative h-96 overflow-hidden rounded-2xl shadow-xl transition-all duration-300 hover:rounded-2xl hover:shadow-2xl"
		>
			<NewsComponent
				product={products[5]}
				bgOverlay={true}
				showContent={false}
				className="h-full w-full transform transition-transform duration-500"
			/>
			<div
				class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
			>
			</div>
		</div>
		<div
			class="group relative h-96 overflow-hidden rounded-2xl shadow-xl transition-all duration-300 hover:rounded-2xl hover:shadow-2xl"
		>
			<NewsComponent
				product={products[6]}
				bgOverlay={true}
				showContent={false}
				className="h-full w-full transform transition-transform duration-500"
			/>
			<div
				class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
			>
			</div>
		</div>
	</div>
</section>

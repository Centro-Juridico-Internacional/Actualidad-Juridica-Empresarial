---
interface Props {
	booleanBanner: boolean;
}

const { booleanBanner } = Astro.props;

import { getBanner } from '@/lib/get-banner';

const banner = await getBanner();
---

{
	banner?.banner && (
		<img
			src={banner.banner}
			alt={banner.nombre}
			class:list={['w-full md:max-w-[1260px]', { hidden: booleanBanner }]}
			loading="eager"
		/>
	)
}

---
import CarouselInterview from '@/components/home/CarouselInterview';
import Carousel from '@/components/home/Carousel';

import { getPautas } from '@/lib/get-pautas';
import { getInterviewsUrl } from '@/lib/get-interviewsUrl';
import Titles from '@/components/home/global/Titles.astro';

const pautas = await getPautas();
const interviews = await getInterviewsUrl(); // <-- ahora aquÃ­, en el server
---

<Titles text="Videos & Podcast " />
<section
	id="ContainerInterview-Magazine"
	class="mt-8 flex h-96 w-full flex-col items-center justify-center bg-white px-4 md:flex-row"
>
	<div class="h-[24rem] w-1/2 bg-green-600 py-6">
		<CarouselInterview interviews={interviews} client:visible />
	</div>

	<div class="flex h-[24rem] w-1/2 items-center justify-center bg-green-600 px-4">
		<Carousel
			width="w-[90%] ml-[5%]"
			autoplaySpeed={5000}
			dotDuration={true}
			data={pautas}
			client:visible
		/>
	</div>
</section>

---
import CarouselNews from '@/components/home/CarouselNews.jsx';
import NewsComponent from '@/components/home/NewsComponent';
import { getNews } from '@/lib/get-news';

const { products } = await getNews({ categoryId: '' });
---

<section id="newsSectionContainer" class="container-main mt-8">
	<div class="grid gap-4 md:grid-cols-5 md:gap-6">
		<!-- Noticias Principales -->
		<div class="group relative col-span-3 overflow-hidden rounded-2xl">
			<CarouselNews products={products} client:visible />
		</div>

		<!-- Noticias Secundarias -->
		<div class="col-span-2 grid gap-4">
			{
				products.slice(3, 5).map((item: any) => (
					<div class="group relative h-[260px] overflow-hidden rounded-2xl transition-transform duration-300 hover:-translate-y-1">
						<img
							src={item.image}
							alt={item.titulo}
							class="absolute inset-0 h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
							loading="lazy"
							decoding="async"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent" />
						<NewsComponent
							product={item}
							truncateWords={30}
							bgOverlay={true}
							className="relative h-full"
							showContent={false}
							variant="compact"
						/>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.container-main {
		margin-left: auto;
		margin-right: auto;
		width: 100%;
		max-width: 80rem;
		padding-left: 1rem;
		padding-right: 1rem;
	}

	@media (min-width: 640px) {
		.container-main {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}

	@media (min-width: 1024px) {
		.container-main {
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}
</style>
